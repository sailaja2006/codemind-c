#include <stdio.h>

int main(void) {
    // your code goes here
    int t;
    scanf("%d", &t);
    
    for (int i = 0; i < t; i++) {
        int x, n;
        scanf("%d %d", &n, &x);
        
        // Calculate the remaining number of donations needed
        int remaining_donations = n - x;
        
        // Output the result
        printf("%d\n", remaining_donations);
    }
    
    return 0;
}
