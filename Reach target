#include <stdio.h>

int main(void) {
    int t;
    scanf("%d", &t);
    
    for(int i = 0; i < t; i++) {
        int x, y;
        scanf("%d %d", &x, &y);
        
        // Calculate the extra runs needed to win the match
        int extra_runs = x - y;
        
        // Output the result
        printf("%d\n", extra_runs);
    }
    
    return 0;
}
